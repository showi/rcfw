<h1>Listing menus</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Available</th>
    <th>Price</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Destroy</th>
  </tr>

<% @menus.each do |menu| %>
  <tr>
    <td><%=h menu.name %></td>
    <td><%=h menu.description %></td>
    <td><%=h menu.available %></td>
    <td><%=h menu.price %></td>
    <td><%= link_to 'Show', menu %></td>
    <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
    <td><%= link_to 'Destroy', menu, :confirm => 'Are you sure?', :method => :delete %></td>
	<tr><td /> 
	<% menu.dishes.each do |dish| %>
		<td>- <%=h dish.name %><td><td colspan="5"><%=h dish.description %></td>
	 <% end %>
	</tr>
	<tr>
  	 <td colspan="6"></td><td>Add dish</td>
	</tr>
<% end %>
</table>

<br />

<%= link_to 'New menu', new_menu_path %>
