<h1>New menu</h1>

<% form_for(@menu) do |f| %>
  <%= f.error_messages %>
	<p>
	<%= collection_select(:menu, :category_id, find_category_by_type("menu"), :id    , :name, options ={:prompt => "- Select type"}, :class =>"payment") %>

	</p>
	<p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :available %><br />
    <%= f.check_box :available %>
  </p>
  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', menus_path %>
